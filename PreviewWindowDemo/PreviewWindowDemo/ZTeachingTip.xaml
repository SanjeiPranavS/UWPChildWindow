<UserControl x:Class="ZTeachingTip.ZTeachingTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ZTeachingTip"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:DefaultBindMode="OneWay"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid>
        <Popup x:Name="ZTeachingTipPopUp"
               IsOpen="{x:Bind IsOpen,Mode=TwoWay}"
               LightDismissOverlayMode="Auto"
               ShouldConstrainToRootBounds="False"
               IsLightDismissEnabled="{x:Bind IsLightDismissEnabled,Mode=TwoWay}">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid x:Name="RootGrid">
                <Grid.Shadow>
                    <ThemeShadow/>
                </Grid.Shadow>
                <Button VerticalAlignment="Top"
                        x:Name="TeachingTipCloseBtn"
                        HorizontalAlignment="Right"
                        Style="{x:Bind CloseButtonStyle}"
                        Canvas.ZIndex="20"
                        MinHeight="20"
                        MinWidth="40"
                        Visibility="Collapsed"
                        Click="CloseButton_OnClick" 
                        Background="Transparent">
                    <Button.Content>
                        <FontIcon Glyph="&#xE711;" Foreground="{ThemeResource  TextBoxButtonForegroundThemeBrush}" />
                    </Button.Content>
                </Button>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentPresenter Background="{x:Bind Background}"
                                      x:Name="RootContentPresenter"
                                      HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Stretch">
                      
                    </ContentPresenter>
                </ScrollViewer>
            </Grid>
        </Popup>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ListDismissStatesGroup">
                <VisualState x:Name="LightDismissEnabled">
                    <VisualState.Setters>
                        <Setter Target="TeachingTipCloseBtn.Visibility"  Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="LightDismissDisabled">
                    <VisualState.Setters>
                        <Setter Target="TeachingTipCloseBtn.Visibility" Value="Visible"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
