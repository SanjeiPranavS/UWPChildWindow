<UserControl
    x:Class="PreviewWindowDemo.ZTeachingTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PreviewWindowDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:DefaultBindMode="OneWay"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid>
        <Popup x:Name="ZTeachingTipPopUp" 
               IsOpen="{x:Bind IsOpen,Mode=TwoWay}" 
               LightDismissOverlayMode="On"
               MinWidth="2" 
               MinHeight="3" 
               IsLightDismissEnabled="{x:Bind IsLightDismissEnabled,Mode=TwoWay}"
               VerticalAlignment="Center">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <ContentPresenter Content="{x:Bind TeachingTipContent}"
                              Background="{x:Bind Background}"
                              x:Name="RootContentPresenter"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                <ContentPresenter.Shadow>
                    <ThemeShadow/>
                </ContentPresenter.Shadow>
            </ContentPresenter>
        </Popup>
    </Grid>
</UserControl>
